@model IEnumerable<VegClasic.Models.Produto>
@{

                ViewBag.Title = "Home Page";
}

<hr id="Topo"/>
@using (Html.BeginForm("Index", "Home", FormMethod.Get))
{
    <div class="input-group obj_p_fundo">
        <input type="text" id="pesquisa" name="pesquisa"  class="form-control" placeholder="Pesquisar por produto">
        <div class="input-group-btn">
            <button class="btn btn-default" type="submit">
                <i class="glyphicon glyphicon-search"></i>
            </button>

        </div>
    </div>
}

<hr>

<div class="content-fluid">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="thumbnail">
                    <a href="#" target="_blank">
                        <img src="@Url.Content("~")uploads/@item.Imagem" alt="error" style="max-height:200px;width:100%">
                        <div class="caption">
                            <h4><b>Nome:</b>@item.Nome</h4>
                            <p><b>Qual é a marca?</b>@item.Marca</p>
                            <p><b>Oque é? </b>@item.Tipo : @item.Descricao</p>
                            <p><b>Onde posso comprar?</b>@item.Local</p>
                        </div>
                    </a>
                </div>
            </div>
        }
        
    </div>
    <div class="row">
        <a href='#Topo'><span class="glyphicon glyphicon-chevron-up"></span></a>
    </div>
</div> 
