<div class='main-nav para-frente'>
    <div class="imagem-fundo">
        <div class='navbar navbar-inverse'>
            <div class='navbar-header'>
                <button type='button' class='navbar-toggle' data-toggle='collapse' data-target='.navbar-collapse'>
                    <span class='sr-only'>Toggle navigation</span>
                    <span class='icon-bar'></span>
                    <span class='icon-bar'></span>
                    <span class='icon-bar'></span>
                </button>
                <div style="padding-left: 10px;padding-top:5px">
                    <img class="img-responsive" src="~/Images/LogoVeg.png" style="max-height:40px;max-width:60px;float:left" />
                    <a class='navbar-brand' style="max-width: 300px;">É Vegano?</a>
                </div>
                        
                </div>
            <div class='clearfix'></div>
            <div class='navbar-collapse collapse'>
                <ul class='nav navbar-nav'>
                    <li>
                        <a href="@Url.Action("Index", "Home" )">
                            <i class="glyphicon glyphicon-search"></i>
                            <span>
                                <strong>Pesquisar Produtos</strong>
                            </span>
                        </a>
                    </li>

                    @if (!Request.IsAuthenticated)
                    {
                        <li>
                            <a href="@Url.Action("Login", "Account")">
                                <i class="glyphicon glyphicon-log-in"></i>
                                <span>
                                    <strong>Login</strong>
                                </span>
                            </a>
                        </li>
                    }

                    @if (Request.IsAuthenticated)
                    {

                        <li>
                            <a href="@Url.Action("Index", "Produtos")">
                                <i class="glyphicon glyphicon-cog"></i>
                                <span>
                                    <strong>Gerenciar Produtos</strong>
                                </span>
                            </a>
                        </li>

                        <li>
                            <a href="@Url.Action("Register", "Account" )">
                                <i class="glyphicon glyphicon-user"></i>
                                <span>
                                    <strong>Register Usuario</strong>
                                </span>
                            </a>
                        </li>
                        <li>
                            @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                            {
                                @Html.AntiForgeryToken()
                            <a href="javascript:document.getElementById('logoutForm').submit()" style="text-decoration:none">
                                <i class="glyphicon glyphicon-log-out"></i>
                                <span>
                                    <strong>Log Out</strong>
                                </span>
                            </a>
                            }
                        </li>
                    }
                    <hr/>
                    <li>
                        @if (Request.IsAuthenticated)
                        {
                            <p style="margin-left:10px"><b>Bem vindo</b> @User.Identity.Name</p>
                        }
                    </li>
                </ul>

            </div>
        </div>
    </div>
</div>

